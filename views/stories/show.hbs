<main class="row">
    <div class="col s12 m8">
        <h1>
            {{story.title}}
            <small>{{{editIcon story.user loggedUser story._id false}}}</small>
        </h1>
        <p>
            <em>{{formatDate date 'MMMM Do YYYY, h:mm a'}}</em>
        </p>
        <div class="card story">
            <div class="card-content">
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4 user-info">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</main>